# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = false 

[*.md]
trim_trailing_whitespace = false

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# Specific files rules
[{package.json, .vimrc}]
indent_size = 2
indent_style = space
